{
  "name": "@t8/react-router",
  "version": "1.0.26",
  "description": "Straightforward and minimalist router for React apps",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx npm-run-all clean compile",
    "clean": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral --external:react",
    "demo": "npx @t8/serve 3000 * tests/route_matching -b src/index.tsx index.js",
    "gh-pages": "npx ghstage --theme=t8 --ymid=103784239 --nav=https://raw.githubusercontent.com/t8js/t8js.github.io/refs/heads/main/assets/nav.html",
    "prepublishOnly": "npx npm-run-all build gh-pages",
    "preversion": "npx npm-run-all typecheck shape build test",
    "shape": "npx codeshape",
    "test": "npx playwright test --project=chromium",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "react router",
    "router",
    "route",
    "spa",
    "history",
    "link"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/t8js/react-router.git"
  },
  "homepage": "https://t8.js.org/react-router",
  "author": "axtk",
  "license": "ISC",
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@t8/serve": "^0.1.19",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.9",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "url-shape": "^1.2.5",
    "zod": "^4.1.11"
  },
  "dependencies": {
    "@t8/router": "^1.0.22"
  }
}
